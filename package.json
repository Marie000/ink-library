{
  "name": "ink-library",
  "version": "0.1.0",
  "main": "index.js",
  "description": "The ink library frontend",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "dev": "sapper dev",
    "build": "sapper build --legacy",
    "export": "sapper export --legacy",
    "start": "node index.js",
    "snowpack": "snowpack --dest static/web_modules/ --babel",
    "lint": "healthier && prettier --write --plugin-search-dir=. '**/*.{js,json,css,yml,svelte}'",
    "pretest": "npm run lint",
    "prepublishOnly": "npm run lint",
    "snapshots": "TAP_SNAPSHOT=1 npm run test && prettier --write --plugin-search-dir=. '**/*.{js,json,css,yml,svelte}'",
    "test": "jest src",
    "test:watch": "npm run test -- --watch",
    "deploy-function": "cd functions/onfinalize && gcloud functions deploy triggerWrapper --runtime nodejs10 --trigger-resource ink-upload-files --trigger-event google.storage.object.finalize",
    "deploy-dev": "npm run build && gcloud app deploy app-dev.yaml --project fb-ink-dev"
  },
  "snowpack": {
    "webDependencies": [
      "intersection-observer",
      "inert-polyfill"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-easy-import": {},
      "postcss-calc": {},
      "cssnano": {}
    }
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "svelte-jester"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ]
  },
  "engines": {
    "node": ">10"
  },
  "healthier": {
    "ignore": [
      "__sapper__",
      "rollup.config.js"
    ]
  },
  "dependencies": {
    "@google-cloud/firestore": "^3.8.6",
    "@google-cloud/storage": "^4.7.0",
    "a11y-dialog": "^5.3.2",
    "autoprefixer": "^9.8.6",
    "awesomplete": "^1.1.5",
    "bcrypt": "^4.0.1",
    "connect-redis": "^4.0.4",
    "cssnano": "^4.1.10",
    "csurf": "^1.11.0",
    "date-fns": "^2.15.0",
    "debug": "^4.1.1",
    "document-register-element": "^1.14.5",
    "dom-anchor-text-position": "^5.0.0",
    "dom-anchor-text-quote": "^4.0.2",
    "dom-seek": "^5.1.1",
    "dompurify": "^2.0.12",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "got": "^10.7.0",
    "inert-polyfill": "^0.2.5",
    "ink-engine": "git+https://github.com/RebusFoundation/ink-engine.git",
    "iso-639-1": "^2.1.3",
    "jsdom": "^16.4.0",
    "jsonwebtoken": "^8.5.1",
    "mime": "^2.4.6",
    "passport": "^0.4.1",
    "passport-auth0": "^1.3.3",
    "passport-http": "^0.3.0",
    "passport-local": "^1.0.0",
    "postcss": "^7.0.32",
    "postcss-calc": "^7.0.3",
    "postcss-custom-properties": "^9.1.1",
    "postcss-easy-import": "^3.0.0",
    "postcss-reporter": "^6.0.1",
    "qsa-observer": "^1.1.5",
    "quill": "^1.3.7",
    "redis": "^2.8.0",
    "resize-observer-polyfill": "^1.5.1",
    "sharp": "^0.24.1",
    "short-uuid": "^3.1.1",
    "universal-base64url": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/runtime": "^7.11.2",
    "@rollup/plugin-commonjs": "^14.0.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "faker": "^4.1.0",
    "friendly-words": "^1.1.10",
    "healthier": "3.2.0",
    "intersection-observer": "^0.7.0",
    "postcss-load-config": "^2.1.0",
    "prettier": "1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "rollup": "^2.23.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-svelte": "^5.2.3",
    "rollup-plugin-terser": "^7.0.0",
    "sapper": "^0.28.0",
    "sirv": "^0.4.6",
    "snowpack": "^2.7.7",
    "svelte": "^3.24.1",
    "svelte-preprocess": "^4.0.10",
    "tap": "^14.10.8",
    "tiny-lr": "^1.1.1",
    "typescript": "^3.9.7"
  }
}
